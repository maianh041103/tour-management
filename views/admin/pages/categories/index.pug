extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
  h1(class="mb-4") #{pageTitle}
  +alert-error(5000)
  +alert-success(5000)

  .card.mb-3
    .card-header Danh sách danh mục
    .card-body
      .row
        .col-8

        .col-4.text-right
          a(
            href=`${prefixAdmin}/categories/create`
            class="btn btn-outline-success"
          ) + Thêm mới


      table(
        class="table table-hover table-sm mt-3"
      )
        thead
          tr
            th STT
            th Hình ảnh
            th Tiêu đề
            th Trạng thái
            th Hành động

        tbody
          each item, index in categories
            tr 
              td #{index+1}
              td
                img(
                  src=item.image
                  alt=item.title
                  width="100px"
                  height="auto"
                )
              td #{item.title}
              td
                if (item.status === "active")
                  a(
                    href="javascript:;"
                    class="badge badge-success"
                    data-status=item.status 
                    data-id=item.id
                    data-type="categories"
                  ) Hoạt động
                else
                  a(
                    href="javascript:;"
                    class="badge badge-danger"
                    data-status=item.status 
                    data-id=item.id
                    data-type="categories"
                  ) Dừng hoạt động
              td
                a(
                  class="btn btn-secondary btn-sm"
                  href=`${prefixAdmin}/categories/detail/${item.id}`
                ) Chi tiết
                a(
                  class="btn btn-warning btn-sm ml-1"
                  href=`${prefixAdmin}/categories/edit/${item.id}`
                ) Sửa
                button(
                  class="btn btn-danger btn-sm ml-1"
                  button-delete
                  data-id=item.id
                  data-type="categories"
                ) Xóa