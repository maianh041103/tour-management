extends ../../layouts/default

block main
  if(account.role.permissions.includes("account_view"))
    if(account.avatar)
      div(class="mb-4")
        img(
          src=account.avatar
          style="width:100px"
        )
    else 
      div(class="mb-4")
        img(
          src="/images/th.jpg"
          style="width:100px"
        )

    if(account.fullName)
      div(class="mb-4") Họ tên: <b>#{account.fullName}</b>

    if (account.email)
      div(class="mb-4") Email: <b>#{account.email}</b>

    if (account.phone)
      div(class="mb-4") Số điện thoại: <b>#{account.phone}</b>

    if (account.role)
      div(class="mb-4") Phân quyền: <b>#{account.role.title}</b>

    if(account.role.permissions.includes("account_edit"))
      a(
        class="btn btn-warning btn-sm"
        href = `${prefixAdmin}/accounts/edit/${account.id}`
        ) Chỉnh sửa

    