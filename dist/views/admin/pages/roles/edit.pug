extends ../../layouts/default.pug

block main
  if(account.role.permissions.includes("roles_edit"))
    h1(class="mb-4") Chỉnh sửa nhóm quyền

    form(
      action = `${prefixAdmin}/roles/edit/${role.id}?_method=PATCH`
      method = "POST"
    )
      div(class="form-group")
        label(for="title") Tiêu đề
        input(
          type="text"
          class="form-control"
          id="title"
          name="title"
          value=role.title
          required
        )
      div(class="form-group")
        label(for="desc") Mô tả
        input(
          type="text"
          class="form-control"
          id="desc"
          name="description"
          value=role.description
        ) 
      div(class="form-group")
        button(
          type="submit"
          class="btn btn-primary"
        ) Chỉnh sửa
  else 
    h1 Bạn không có quyền vào trang này